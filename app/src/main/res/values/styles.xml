<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColorSecondary">@color/bottomItemTintColor</item>

        <!--        Modified Attr for Dark Mode Effect-->
        <item name="primaryAppColor">@color/primaryAppColor</item>
        <item name="mainBgColor">@color/mainBgColor</item>
        <item name="headingNormalTextColor">@color/headingNormalTextColor</item>
        <item name="fadeTextColor">@color/fadeTextColor</item>
        <item name="bgBoxColor">@color/mainBgColor</item>
        <item name="bottomItemTintColor">@color/bottomItemTintColor</item>
        <item name="mainItemColor">@color/mainItemColor</item>
        <item name="boxTextColor">@color/boxTextColor</item>
        <item name="boxHoverColor">@color/boxHoverColor</item>
        <item name="errorBoxColor">@color/errorBoxColor</item>
        <item name="feedbackBoxBgColor">@color/feedbackBoxBgColor</item>
        <item name="dialogBgColorInfo">@color/dialogBgColorInfo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- Base application theme. -->
    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarySplash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSplash</item>
        <item name="colorAccent">@color/colorAccentSplash</item>
    </style>
</resources>